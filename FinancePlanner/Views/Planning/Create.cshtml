@model FinancePlanner.ViewModels.PlanningViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="form-wrapper">
    <div class="form-container">
        <div class="form-title">
            <h1>Create Plan</h1>
        </div>
        <div class="form-group">

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Plan Title</label>
                    <input asp-for="Title" class="form-control"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Category</label>
                    <select asp-for="EventCategoryId" class="form-control" asp-items="@ViewBag.EventCategoryList"></select>
                    <span asp-validation-for="EventCategoryId" class="text-danger"></span>
                </div>
                
                <div class="btn-group-wrapper">
                    <div class="btn-group">
                        <a class="btn btn-primary" href="#" id="add_general">Add General Goal</a>
                        <a class="btn btn-primary" href="#" id="add_financial">Add Financial Goal</a>
                        <a class="btn btn-primary" href="#" id="add_fitness">Add Fitness Goal</a>
                    </div>
                </div>

                <div id="goal-list" class="goal-items">
                    @Html.EditorFor(f => f.Goals)
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>